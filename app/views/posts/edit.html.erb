<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">Edit a post</h1>

    <!-- Send the form to the update action to sav eit in the database -->
    <%= form_tag("/posts/#{@post.id}/update") do %>

        <!-- Add a form to edit the post -->
        <div class="form">
            <div class="form-body">
                <!-- Display the error of @post -->
                <% @post.errors.full_messages.each do |message|%>
                    <div class="form-error">
                        <%= message %>
                    </div>
                <% end %>

                <!-- Display initial value on the form -->
                <textarea name="content"><%= @post.content %></textarea>
                <input type="submit" value="Save">
            </div>
        </div>
    
    <% end %>

  </div>
</div>

