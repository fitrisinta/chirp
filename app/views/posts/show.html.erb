<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <p>
        <!-- Show post's content -->
        <%= @post.content %>
      </p>
      <div class="post-time">
        <!-- Show post's creation time -->
        <%= @post.created_at %>
      </div>
      <div class="post-menus">
        <%= link_to("Edit", "/posts/#{@post.id}/edit") %>
        <%= link_to("Delete", "/posts/#{@post.id}/destroy", {method:"post"}) %>
      </div>
    </div>
  </div>
</div>